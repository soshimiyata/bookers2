<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @books.each do |book| %>
      <ul>
        <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %>
        <h2>Title</h2>
        <h2>Opinion</h2>
        <p><%= link_to book.title, book_path(book.id) %></p>
        <p><%= book.body %></p>
      </ul
    </div>
  </div>
</div>
<% end %>