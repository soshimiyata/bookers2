<div>
  <%= flash[:notice] %>
</div>
<%= render 'books/userinfo', user: @user %>
<% @books.each do |book| %>
    <h1>Books</h1>
    <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <h2>Title</h2>
    <p><%= link_to book.title, book_path(book.id) %></p>
    <h2>Opinion</h2>
    <p><%= book.body %></p>
<% end %>