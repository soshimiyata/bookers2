<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @books.each do |book| %>
      <h1>Books</h1>
      <h2>Title</h2>
      <h2>Opinion</h2>
      <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
      <p><%= link_to book.title, book_path(book.id) %></p>
      <p><%= book.body %></p>
    </div>
  </div>
</div>
<% end %>